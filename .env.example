# ============================================================================
# SMART RECRUITER - Environment Variables
# ============================================================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env
# ============================================================================

# ============================================================================
# GROQ API (FREE! - Get key from https://console.groq.com)
# ============================================================================
GROQ_API_KEY=gsk_your_groq_api_key_here

# Model options (uncomment one):
GROQ_MODEL=llama-3.3-70b-versatile
# GROQ_MODEL=llama-3.1-70b-versatile
# GROQ_MODEL=mixtral-8x7b-32768

# ============================================================================
# QDRANT CLOUD (Get from https://cloud.qdrant.io)
# ============================================================================
QDRANT_URL=https://your-cluster-id.aws.cloud.qdrant.io
QDRANT_API_KEY=your_qdrant_api_key_here
QDRANT_COLLECTION=smart_recruiter

# ============================================================================
# DATABASE (SQLite - No config needed, or PostgreSQL)
# ============================================================================
DATABASE_URL=sqlite+aiosqlite:///./data/smart_recruiter.db
# DATABASE_URL=postgresql+asyncpg://user:password@localhost/smart_recruiter

# ============================================================================
# EMAIL SERVICE (Optional - for sending interview invites)
# ============================================================================
# Resend (https://resend.com - 100 free emails/day)
RESEND_API_KEY=re_your_resend_api_key_here
EMAIL_FROM=recruiter@yourdomain.com

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
APP_NAME=Smart Recruiter
APP_ENV=development
DEBUG=true
SECRET_KEY=your-secret-key-change-in-production

# API Settings
API_HOST=0.0.0.0
API_PORT=8000

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# ============================================================================
# FILE STORAGE
# ============================================================================
UPLOAD_DIR=./data/uploads
RESUME_DIR=./data/resumes
MAX_FILE_SIZE_MB=10

# ============================================================================
# CREW AI SETTINGS
# ============================================================================
CREW_VERBOSE=true
CREW_MEMORY=true

# ============================================================================
# SCORING WEIGHTS (must sum to 1.0)
# ============================================================================
WEIGHT_SKILLS=0.4
WEIGHT_EXPERIENCE=0.3
WEIGHT_EDUCATION=0.2
WEIGHT_CULTURE=0.1

# Minimum match score to be considered (0-100)
MIN_MATCH_SCORE=60
